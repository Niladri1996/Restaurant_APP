<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tv_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Id :"
            android:textColor="@color/black"></TextView>

        <TextView
            android:id="@+id/txt_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_order"
            android:layout_marginTop="5dp"
            android:text="123456789"></TextView>

        <TextView
            android:id="@+id/tv_cust_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_order"
            android:layout_marginTop="5dp"
            android:text="Customer Contact :"
            android:textColor="@color/black"></TextView>

        <TextView
            android:id="@+id/txt_cust_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_cust_phone"
            android:layout_marginTop="5dp"
            android:text="905122593"></TextView>

        <TextView
            android:id="@+id/tv_cust_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_cust_phone"
            android:layout_marginTop="5dp"
            android:text="Customer Address :"
            android:textColor="@color/black"></TextView>

        <TextView
            android:id="@+id/txt_cust_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_cust_address"
            android:layout_marginTop="5dp"
            android:text="3 No Bijoynagar Naihati"></TextView>

        <TextView
            android:id="@+id/tv_cust_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_cust_address"
            android:layout_marginTop="5dp"
            android:text="Customer Review :"
            android:textColor="@color/black"></TextView>

        <TextView
            android:id="@+id/txt_cust_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_cust_review"
            android:layout_marginTop="5dp"
            android:text="Good quality and too much quantity"></TextView>


        <RatingBar
            android:id="@+id/rating"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_cust_review"
            android:layout_marginTop="5dp"></RatingBar>


        <View
            android:layout_width="match_parent"
            android:layout_height="1.2dp"
            android:layout_below="@id/rating"
            android:layout_marginStart="10dp"

            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#c2c2c2"></View>


    </RelativeLayout>



</RelativeLayout>