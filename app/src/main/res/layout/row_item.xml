<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tv_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Id "
            android:textColor="@color/black"></TextView>

        <TextView
            android:id="@+id/txt_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/tv_item"
            android:text="1698746985"></TextView>

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item"
            android:layout_marginTop="8dp"
            android:text="Item Name"
            android:textColor="@color/black"></TextView>

        <TextView
            android:id="@+id/txt_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_item"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/tv_item"
            android:text="Chicken Tanduri"></TextView>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_name"
            android:layout_marginTop="8dp"
            android:text="Item Price"

            android:textColor="@color/black"></TextView>

        <TextView
            android:id="@+id/tv_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_item_name"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/tv_item"
            android:text="1278.00"></TextView>

        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_price"
            android:layout_marginTop="8dp"
            android:text="Quantity "
            android:textColor="@color/black"></TextView>

        <TextView
            android:id="@+id/txt_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_price"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="8dp"
            android:textColor="#D04BBD4F"
            android:layout_toRightOf="@id/tv_item"
            android:text="5"></TextView>


        <View
            android:layout_width="match_parent"
            android:layout_height="1.2dp"
            android:layout_below="@id/tv_quantity"
            android:layout_marginTop="5dp"
            android:background="#c2c2c2"></View>
    </RelativeLayout>

</RelativeLayout>